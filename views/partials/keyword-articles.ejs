   <form id="searchForm" action="/articles" method="GET">
      <div class="form-group">
        <label for="keyword">Keyword:</label>
        <input type="text" id="keyword" name="keyword" class="form-control">
      </div>
      <div class="form-group">
        <label for="fromDate">From Date:</label>
        <input type="date" id="fromDate" name="fromDate" class="form-control">
      </div>
      <div class="form-group">
        <label for="toDate">To Date:</label>
        <input type="date" id="toDate" name="toDate" class="form-control">
      </div>
      <div class="form-group">
        <label for="howManyArticles">How Many Articles:</label>
        <input type="number" id="howManyArticles" name="howManyArticles" class="form-control">
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
      <button class="btn btn-secondary" id="">Create word cloud</button>
    </form>
        <h4>Fetched <%= articles.length %> articles</h4>
    <ul>
        <% articles.forEach(article => { %>
        <li>
            <h3><%= article.webTitle %></h3>
            <p><%= article.fields.trailText %></p>
            <a href="<%= article.webUrl %>" target="_blank">Read more</a>
        </li>
        <% }) %>        
    </ul>


<script src="/js/default_values_keyword_search.js"></script>