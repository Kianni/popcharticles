<div class="container mt-3">
  <h1>Two steps until word cloud!</h1>
  <div class="d-flex justify-content-end">
    <a href="/dashboard" class="btn btn-success">To Dashboard</a>
  </div>


<!-- Step 1: Fetch Articles -->
<div class="card mt-3">
  <div class="card-header">
    <h3>Step 1: Search by keyword and date</h3>
  </div>
  <div class="card-body">
    <div id="keyword-articles-container">
      <%- include('partials/keyword-articles', { articles: articles, searchId: searchId }) %>
    </div>
  </div>
</div>

  <!-- Step 2: Create Word Cloud -->
<% if (articles.length > 0) { %>
<div class="card mt-3">
  <div class="card-header">
    <h3>Step 2: Create Word Cloud</h3>
  </div>
  <div class="card-body">
    <div id="keyword-articles-wordcloud-container">
      <%- include('partials/keyword-articles-wordcloud', { searchId: searchId }) %>
    </div>
  </div>
</div>
<% } else { %>
    <div class="card mt-3" id="wordcloud-placeholder">
      <div class="card-header">
        <h5 class="text-right text-secondary">
          ...after fetching articles, you can create a word cloud...
        </h5>
      </div>
    </div>
  <% } %>
</div>